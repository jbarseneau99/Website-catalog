<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.spacedataarchive.controller.URLValidationController"
            prefHeight="700.0" prefWidth="1200.0">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="URL Validation" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS" />
                <Label text="ðŸ¤– AI Enhanced" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 15;"/>
            </HBox>
            <Label text="Validate URLs for security, content relevance, and technical compliance" style="-fx-font-style: italic;" />
            <Separator />
        </VBox>
    </top>
    
    <center>
        <HBox>
            <!-- LEFT PANEL: Control Panel -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-border-color: #dddddd; -fx-border-width: 0 1 0 0;" minWidth="280" maxWidth="280">
                <Label text="Validation Controls" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                
                <Label text="Site Map:" />
                <ComboBox fx:id="siteMapComboBox" prefWidth="260" maxWidth="Infinity" />
                
                <TitledPane text="Validation Stats" expanded="true">
                    <VBox spacing="8">
                        <GridPane hgap="10" vgap="8">
                            <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
                            
                            <Label text="URLs to Validate:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                            <Label fx:id="urlCountLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            
                            <Label text="Total in Queue:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <Label fx:id="queueTotalLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                            
                            <Label text="Validation Method:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <ComboBox fx:id="validationMethodComboBox" prefWidth="150" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        </GridPane>
                        
                        <Separator />
                        
                        <HBox spacing="5" alignment="CENTER">
                            <Label text="URL Source:" />
                            <Label fx:id="urlSourceLabel" text="No site map selected" style="-fx-font-style: italic;" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </TitledPane>
                
                <VBox spacing="8">
                    <Button fx:id="validateButton" text="Start Validation" 
                           style="-fx-background-color: #2980b9; -fx-text-fill: white;" maxWidth="Infinity" />
                    <Button fx:id="stopButton" text="Stop" 
                           style="-fx-background-color: #c0392b; -fx-text-fill: white;" maxWidth="Infinity" />
                </VBox>
                
                <TitledPane text="Validation Progress" expanded="true">
                    <VBox spacing="8">
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <Label text="Progress:" prefWidth="60" />
                            <ProgressBar fx:id="validationProgressBar" HBox.hgrow="ALWAYS" prefWidth="170" progress="0" />
                            <Label fx:id="progressLabel" text="0%" prefWidth="50" />
                        </HBox>
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <Label text="Speed:" prefWidth="60" />
                            <Label fx:id="performanceLabel" text="0 URLs/sec" style="-fx-font-weight: bold;" />
                        </HBox>
                    </VBox>
                </TitledPane>
                
                <Region VBox.vgrow="ALWAYS" />
                
                <Label fx:id="statusLabel" text="Ready" style="-fx-font-style: italic;" />
            </VBox>
            
            <!-- CENTER: Main Content Area -->
            <VBox HBox.hgrow="ALWAYS" spacing="10" style="-fx-padding: 10;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Validation Results" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                    <Region HBox.hgrow="ALWAYS" />
                    
                    <!-- Quick filter controls -->
                    <TextField fx:id="filterField" promptText="Filter by URL" prefWidth="150" />
                    <ComboBox fx:id="statusFilterCombo" prefWidth="100" promptText="Status" />
                    <Button text="Apply" fx:id="filterButton" style="-fx-background-color: #3498db; -fx-text-fill: white;" />
                    <Button text="Clear" fx:id="clearFilterButton" />
                </HBox>
                
                <TableView fx:id="resultsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="urlColumn" text="URL" prefWidth="300" />
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="250" />
                        <TableColumn fx:id="assetTypeColumn" text="Asset Type" prefWidth="100" />
                        <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                        <TableColumn fx:id="messageColumn" text="Message" prefWidth="200" />
                    </columns>
                </TableView>
                
                <!-- Pagination -->
                <Pagination fx:id="resultsPagination" maxPageIndicatorCount="10" />
                
                <!-- Details Area -->
                <TitledPane text="Validation Details" expanded="false">
                    <VBox spacing="8">
                        <TextArea fx:id="detailsTextArea" prefHeight="120" wrapText="true" editable="false"
                                 style="-fx-font-family: 'Courier New', monospace;" />
                    </VBox>
                </TitledPane>
            </VBox>
            
            <!-- RIGHT PANEL: AI Assistant Drawer -->
            <StackPane fx:id="rightDrawerContainer">
                <VBox fx:id="aiAssistantDrawer" style="-fx-padding: 10; -fx-background-color: #f0e6f7; -fx-border-color: #dddddd; -fx-border-width: 0 0 0 1;" 
                      minWidth="300" maxWidth="300">
                    <HBox alignment="CENTER_LEFT" spacing="5">
                        <Label text="ðŸ¤– URL Validation Assistant" style="-fx-font-weight: bold; -fx-font-size: 14;" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="toggleAIDrawerButton" text="Hide" style="-fx-background-color: transparent;" 
                                onAction="#toggleAIDrawer" />
                    </HBox>
                    
                    <Separator />
                    
                    <!-- Chat Area -->
                    <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" 
                                style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                        <VBox fx:id="chatContainer" spacing="10" style="-fx-padding: 10;" />
                    </ScrollPane>
                    
                    <!-- Message Input Area -->
                    <HBox spacing="5" alignment="CENTER" style="-fx-padding: 5 0 0 0;">
                        <TextArea fx:id="messageInput" prefHeight="40" HBox.hgrow="ALWAYS" />
                        <Button fx:id="sendButton" text="Send" prefWidth="60" 
                                style="-fx-background-color: #8e44ad; -fx-text-fill: white;" />
                    </HBox>
                    
                    <Separator />
                    
                    <TitledPane text="AI Capabilities" expanded="false">
                        <VBox spacing="5">
                            <Label wrapText="true" text="â€¢ Identifies security threats and malicious content" />
                            <Label wrapText="true" text="â€¢ Verifies content relevance to your project" />
                            <Label wrapText="true" text="â€¢ Ensures compliance with archival standards" />
                            <Label wrapText="true" text="â€¢ Detects broken links and redirects" />
                            <Label wrapText="true" text="â€¢ Suggests URL categorization" />
                        </VBox>
                    </TitledPane>
                </VBox>
                
                <!-- Collapsed state - just the toggle button -->
                <VBox fx:id="aiAssistantToggle" visible="false" minWidth="30" maxWidth="30" 
                      style="-fx-background-color: #f0e6f7; -fx-border-color: #dddddd; -fx-border-width: 0 0 0 1;">
                    <Button fx:id="expandAIDrawerButton" text="ðŸ‘ï¸" 
                            style="-fx-background-color: transparent;" 
                            onAction="#toggleAIDrawer" />
                </VBox>
            </StackPane>
        </HBox>
    </center>
</BorderPane> 