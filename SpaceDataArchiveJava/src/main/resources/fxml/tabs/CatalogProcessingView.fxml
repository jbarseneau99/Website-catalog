<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.shape.Circle?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.spacedataarchive.controller.CatalogProcessingController">
   <children>
      <BorderPane layoutX="-4.0" layoutY="-6.0" prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" 
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Space Data Catalog Processing" textFill="#0066cc">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Separator />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </VBox>
         </top>
         <center>
            <VBox fx:id="processingContainer" spacing="10.0" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
               <children>
                  <!-- Process Flow Indicator -->
                  <TitledPane animated="false" text="AI-Enhanced Process Flow" expanded="true">
                     <content>
                        <VBox spacing="5.0">
                           <HBox spacing="5.0" alignment="CENTER">
                              <children>
                                 <VBox alignment="CENTER" minWidth="120">
                                    <Circle fx:id="phase1Circle" radius="12" fill="#e0e0e0" stroke="BLACK" strokeWidth="1"/>
                                    <Label text="AI Reconnaissance" textAlignment="CENTER" wrapText="true"/>
                                 </VBox>
                                 <Separator HBox.hgrow="ALWAYS" />
                                 <VBox alignment="CENTER" minWidth="120">
                                    <Circle fx:id="phase2Circle" radius="12" fill="#e0e0e0" stroke="BLACK" strokeWidth="1"/>
                                    <Label text="Optimized Setup" textAlignment="CENTER" wrapText="true"/>
                                 </VBox>
                                 <Separator HBox.hgrow="ALWAYS" />
                                 <VBox alignment="CENTER" minWidth="120">
                                    <Circle fx:id="phase3Circle" radius="12" fill="#e0e0e0" stroke="BLACK" strokeWidth="1"/>
                                    <Label text="Smart Crawling" textAlignment="CENTER" wrapText="true"/>
                                 </VBox>
                                 <Separator HBox.hgrow="ALWAYS" />
                                 <VBox alignment="CENTER" minWidth="120">
                                    <Circle fx:id="phase4Circle" radius="12" fill="#e0e0e0" stroke="BLACK" strokeWidth="1"/>
                                    <Label text="Validation &amp; Enrichment" textAlignment="CENTER" wrapText="true"/>
                                 </VBox>
                                 <Separator HBox.hgrow="ALWAYS" />
                                 <VBox alignment="CENTER" minWidth="120">
                                    <Circle fx:id="phase5Circle" radius="12" fill="#e0e0e0" stroke="BLACK" strokeWidth="1"/>
                                    <Label text="Results Processing" textAlignment="CENTER" wrapText="true"/>
                                 </VBox>
                              </children>
                              <padding>
                                 <Insets top="10.0" bottom="5.0" />
                              </padding>
                           </HBox>
                           <HBox>
                              <children>
                                 <Label fx:id="phaseDetailLabel" text="Select a job and start mapping to begin the AI-enhanced process" 
                                        wrapText="true" HBox.hgrow="ALWAYS" />
                              </children>
                              <padding>
                                 <Insets top="5.0" bottom="5.0" />
                              </padding>
                           </HBox>
                        </VBox>
                     </content>
                  </TitledPane>
                  
                  <TitledPane animated="false" text="Create New Job">
                     <content>
                        <VBox spacing="10.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label minWidth="100.0" text="Job Name:" />
                                    <TextField fx:id="jobNameField" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label minWidth="100.0" text="Seed URL:" />
                                    <TextField fx:id="seedUrlField" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label minWidth="100.0" text="Max Depth:" />
                                    <TextField fx:id="maxDepthField" promptText="Default: 3" />
                                    <Label minWidth="100.0" text="Max URLs:" />
                                    <TextField fx:id="maxUrlsField" promptText="Default: 10000" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_RIGHT">
                                 <children>
                                    <Button fx:id="createJobButton" mnemonicParsing="false" onAction="#createJob" 
                                            style="-fx-background-color: #4CAF50;" text="Create Job" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="12.0" />
                                       </font>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </TitledPane>
                  <TitledPane animated="false" expanded="true" text="Job Management">
                     <content>
                        <VBox spacing="10.0">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label minWidth="100.0" text="Select Job:" />
                                    <ComboBox fx:id="jobSelector" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                                    <Button mnemonicParsing="false" onAction="#refreshJobList" text="Refresh" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button fx:id="startMappingButton" mnemonicParsing="false" onAction="#startMapping" 
                                            style="-fx-background-color: #2196F3;" text="Start Mapping" textFill="WHITE" />
                                    <Button fx:id="startValidationButton" mnemonicParsing="false" onAction="#startValidation" 
                                            style="-fx-background-color: #00BCD4;" text="Start Validation" textFill="WHITE" />
                                    <Button fx:id="startExtractionButton" mnemonicParsing="false" onAction="#startExtraction" 
                                            style="-fx-background-color: #9C27B0;" text="Start Extraction" textFill="WHITE" />
                                    <Button fx:id="startEnhancementButton" mnemonicParsing="false" onAction="#startEnhancement" 
                                            style="-fx-background-color: #FF9800;" text="Start Enhancement" textFill="WHITE" />
                                    <Button fx:id="stopProcessingButton" mnemonicParsing="false" onAction="#stopProcessing" 
                                            style="-fx-background-color: #F44336;" text="Stop Processing" textFill="WHITE" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                        </VBox>
                     </content>
                  </TitledPane>
                  <HBox spacing="10.0" VBox.vgrow="ALWAYS">
                     <children>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Processing Log">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TextArea fx:id="logArea" editable="false" prefHeight="200.0" prefWidth="200.0" 
                                        wrapText="true" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Label text="Statistics">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Label>
                              <TableView fx:id="statisticsTable" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="statNameColumn" prefWidth="150.0" text="Metric" />
                                  <TableColumn fx:id="statValueColumn" prefWidth="150.0" text="Value" />
                                </columns>
                                <columnResizePolicy>
                                   <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </center>
         <bottom>
            <HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Status:" />
                  <Label fx:id="statusLabel" text="Ready" HBox.hgrow="ALWAYS" />
                  <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="-1.0" visible="false" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </BorderPane.margin>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane> 