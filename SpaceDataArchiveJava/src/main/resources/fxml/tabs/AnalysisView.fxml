<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.spacedataarchive.controller.AnalysisController"
            prefHeight="700.0" prefWidth="1200.0">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Data Analysis" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Label text="ðŸ¤– AI Enhanced" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-padding: 5 10; -fx-background-radius: 15;"/>
            </HBox>
            
            <Label text="Analyze data relationships, patterns, and insights" style="-fx-font-style: italic;" />
            
            <Separator />
        </VBox>
    </top>
    
    <left>
        <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5;" prefWidth="300.0">
            <Label text="Analysis Configuration" style="-fx-font-weight: bold;" />
            
            <Label text="Analysis Type:" />
            <ComboBox fx:id="analysisTypeComboBox" prefWidth="280" />
            
            <Label text="Datasets:" style="-fx-padding: 10 0 5 0;" />
            <ListView fx:id="datasetListView" prefHeight="200" VBox.vgrow="ALWAYS" />
            
            <Button fx:id="analyzeButton" text="Analyze Data" prefWidth="280" style="-fx-background-color: #2980b9; -fx-text-fill: white;" />
            
            <Separator />
            
            <Label text="AI Capabilities:" style="-fx-font-weight: bold; -fx-text-fill: #6c3483;" />
            <Label text="AI analyzes web content for themes, entities, and significance, generating summaries and contextual relationships." 
                  wrapText="true" style="-fx-padding: 0 0 10 0;" />
        </VBox>
    </left>
    
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <VBox style="-fx-background-color: #f0e6f7; -fx-padding: 10; -fx-background-radius: 5;" VBox.vgrow="NEVER">
                <Label text="AI Analysis Assistant" style="-fx-font-weight: bold; -fx-text-fill: #6c3483;" />
                <Label text="Ask me to analyze patterns, trends, and relationships in your archived space data." wrapText="true" />
            </VBox>
            
            <!-- Chat Area -->
            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                <VBox fx:id="chatContainer" spacing="10" style="-fx-padding: 10;" />
            </ScrollPane>
            
            <!-- Message Input Area -->
            <HBox spacing="10" alignment="CENTER">
                <TextArea fx:id="messageInput" prefHeight="40" HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton" text="Send" prefWidth="80" style="-fx-background-color: #8e44ad; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 5 10; -fx-background-color: #f0f0f0;">
            <Label fx:id="statusLabel" text="Ready" />
        </HBox>
    </bottom>
    
</BorderPane> 