<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<VBox fx:id="floatingChatContainer" 
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.spacedataarchive.controller.FloatingChatController"
      stylesheets="/css/application.css"
      styleClass="floating-chat"
      prefWidth="350.0" prefHeight="500.0"
      maxHeight="500.0">
    
    <HBox fx:id="chatHeader" alignment="CENTER" styleClass="floating-chat-header" prefHeight="50.0">
        <padding>
            <Insets top="5" right="10" bottom="5" left="10" />
        </padding>
        <Button fx:id="toggleButton" styleClass="floating-chat-toggle">
            <graphic>
                <ImageView fx:id="aiIconView" fitHeight="32.0" fitWidth="32.0" preserveRatio="true" />
            </graphic>
        </Button>
        <Label fx:id="chatTitleLabel" text="AI Assistant" styleClass="floating-chat-title" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="minimizeButton" text="â€”" styleClass="floating-chat-minimize" />
    </HBox>
    
    <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="floating-chat-scroll">
        <VBox fx:id="chatContainer" spacing="10" styleClass="floating-chat-messages">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15" />
            </padding>
        </VBox>
    </ScrollPane>
    
    <HBox spacing="5" alignment="CENTER" styleClass="floating-chat-input-container">
        <padding>
            <Insets top="10" right="15" bottom="10" left="15" />
        </padding>
        <TextArea fx:id="messageInput" promptText="Type your message here..." 
                 HBox.hgrow="ALWAYS" styleClass="floating-chat-input" 
                 prefRowCount="3" wrapText="true" />
        <Button fx:id="sendButton" text="Send" styleClass="floating-chat-send" />
    </HBox>
    
    <Label fx:id="statusLabel" text="Ready" styleClass="floating-chat-status">
        <padding>
            <Insets top="5" right="15" bottom="5" left="15" />
        </padding>
    </Label>
    
</VBox> 