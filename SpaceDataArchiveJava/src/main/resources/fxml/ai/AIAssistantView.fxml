<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.spacedataarchive.controller.AIAssistantController"
            prefHeight="800.0" prefWidth="1200.0">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="AI Chat Interface" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Model:" />
                <ComboBox fx:id="modelComboBox" prefWidth="200" />
                
                <Region HBox.hgrow="ALWAYS" />
                
                <Label text="API Key:" />
                <PasswordField fx:id="apiKeyField" promptText="Enter your Anthropic API key" prefWidth="300" />
                <Button fx:id="saveApiKeyButton" text="Save" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.25">
            <!-- Left side: Conversation list -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Conversations" style="-fx-font-weight: bold;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="newChatButton" text="New Chat" />
                </HBox>
                
                <ListView fx:id="conversationListView" VBox.vgrow="ALWAYS" />
            </VBox>
            
            <!-- Right side: Chat area -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <!-- Chat messages -->
                <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <VBox fx:id="chatContainer" spacing="15" />
                </ScrollPane>
                
                <!-- Message input -->
                <HBox spacing="10">
                    <TextArea fx:id="messageInput" promptText="Type your message here... (Shift+Enter for new line)" HBox.hgrow="ALWAYS" />
                    <Button fx:id="sendButton" text="Send" minWidth="80" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 5; -fx-background-color: #f0f0f0;">
            <Label fx:id="statusLabel" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <Hyperlink text="Anthropic Claude" onAction="#openAnthropicWebsite" />
        </HBox>
    </bottom>
    
</BorderPane> 