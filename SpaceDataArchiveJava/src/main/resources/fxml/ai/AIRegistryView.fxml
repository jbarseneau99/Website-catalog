<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.spacedataarchive.controller.AIRegistryController"
            prefHeight="800.0" prefWidth="1200.0">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="AI Registry" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <Label text="Manage AI functions and their memory segments" style="-fx-font-style: italic;" />
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button fx:id="refreshButton" text="Refresh" />
                <Region HBox.hgrow="ALWAYS" />
                <Label text="Filter:" />
                <ComboBox fx:id="filterTypeComboBox" promptText="Function Type" prefWidth="150" />
                <TextField fx:id="searchField" promptText="Search functions..." prefWidth="250" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.6">
            <!-- Left side: Function list -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="AI Functions" style="-fx-font-weight: bold;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="addFunctionButton" text="Add Function" />
                </HBox>
                
                <TableView fx:id="functionsTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="150" />
                        <TableColumn fx:id="nameColumn" text="Name" prefWidth="200" />
                        <TableColumn fx:id="typeColumn" text="Type" prefWidth="100" />
                        <TableColumn fx:id="messagesColumn" text="Messages" prefWidth="80" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="150" />
                    </columns>
                </TableView>
            </VBox>
            
            <!-- Right side: Function details -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <Label text="Function Details" style="-fx-font-weight: bold;" />
                
                <GridPane hgap="10" vgap="10">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    
                    <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="functionIdField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    
                    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="functionNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    
                    <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <ComboBox fx:id="functionTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    
                    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextArea fx:id="descriptionTextArea" prefHeight="100" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    
                    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="4">
                        <Button fx:id="saveButton" text="Save Changes" />
                        <Button fx:id="clearMessagesButton" text="Clear Messages" />
                    </HBox>
                </GridPane>
                
                <Label text="Memory Segments" style="-fx-font-weight: bold;" />
                <TableView fx:id="messagesTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="roleColumn" text="Role" prefWidth="80" />
                        <TableColumn fx:id="contentColumn" text="Content" prefWidth="300" />
                        <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="150" />
                    </columns>
                </TableView>
            </VBox>
        </SplitPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-padding: 5; -fx-background-color: #f0f0f0;">
            <Label fx:id="statusLabel" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="memoryStatsLabel" text="0 functions, 0 messages" />
        </HBox>
    </bottom>
    
</BorderPane> 